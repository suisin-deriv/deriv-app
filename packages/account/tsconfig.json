{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "Components/*": ["src/Components/*"],
            "Containers/*": ["src/Containers/*"],
            "Constants/*": ["src/Constants/*"],
            "Configs/*": ["src/Configs/*"],
            "Duplicated/*": ["src/Duplicated/*"],
            "Helpers/*": ["src/Helpers/*"],
            "Layout/*": ["src/Layout/*"],
            "Modules/*": ["src/Modules/*"],
            "Sections/*": ["src/Sections/*"],
            "Stores/*": ["src/Stores/*"],
            "Styles/*": ["src/Styles/*"],
            "Types": ["src/Types"],
            "@deriv/*": ["../*/src"]
        }
    },
    "include": ["src","globals.d.ts"]
}
